<view class="page-course-index">
	<view class="header">
        <image src="/assets/img/banner.png" mode='aspectFill' alt=""></image>
	</view>
	<view class="course-content">
		<navigator class="item-box " wx:for="{{dataList}}" wx:for-item="item" wx:for-index="index" wx:key="index" hover-class="none" url="/pages/course/detail/index?id={{item.cl_id}}">
      <!-- 标题层 -->
      <view class="video-title-box">
        <view class='video-title'>{{item.cl_title}}</view>
      </view> 
      <!-- 视频图片层 -->
      <view data-id="{{index}}" class="video-image-box" style="display: {{ _index == index? 'none' : 'block' }};" bindtap="videoPlay">
        <view class="video-cover-box" >
          <!-- <image class="video-image" src="/assets/img/content.png" mode="aspectFit"> -->
          <!-- </image> -->
       </view> 
        <!-- 视频按钮 -->
        <image class="video-image-play" src="/assets/img/icon_short.png" mode="scaleToFill"></image>
				<view class="badge">
					<view class="badge-new">视频</view>
				</view> 
			
      </view>
      <!-- 视频播放层 -->
			 <video src="{{item.cl_marvellous}}" data-id="{{index}}" class='video' wx:if="{{_index == index}}" objectFit='contain' autoplay='{{true}}' controls show-fullscreen-btn="false" binderror="videoErrorCallback" show-center-play-btn='{{false}}' 
      play-btn-position="bottom" bindtimeupdate='bindtimeupdate' show-fullscreen-btn="{{false}}">
				<view class="bcg" wx:if="{{currentTime==durationTime}}"></view>
				<view class="play-time" wx:if="{{currentTime==durationTime}}">查看完整视频<van-icon name="arrow" /><van-icon name="arrow" style="margin-left: -20rpx;"/></view>
			</video>
	
     
			<!-- 底部展示 -->
			<view class="foot">
					<van-icon name="eye" size="20px" color="#B1B0B0" />
					<view class="num">{{item.cl_show}}</view>
					<view class="into">{{item.cl_type}}</view>
			</view>
			
    </navigator>
		
