			</view>
			<view class="badge">
                <view class="badge-new">视频</view>
            </view>
		</view> -->
	</view>
	<navigator class="live" hover-class="none" url="/pages/course/live-detail/index?id={{liveData.l_id}}">
		<image mode="aspectFill" class="img" src="https://www.chinamas.cn/{{liveData.l_img}}"/>
		<!-- <image class="img" src="/assets/img/content.png" mode="aspectFill" /> -->
		<view class="live-badge">
			<van-icon name="orders-o" size="16px" color="#fff"/>
			<view class="badge-new">直播预告</view>
		</view>
	</navigator>
