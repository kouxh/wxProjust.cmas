page{
  background-color: #f8f8f8;
}
.pages-course-form-index{
  width: 100%;
  height: 100%;
 
}
.address-box{
	background-color: #ffffff;
  border-radius: 1rpx;
  margin: 30rpx 0;
  padding: 0 30rpx 30rpx;
}
.address-box .title{
  font-size: 30rpx;
  color: #141718;
  padding-top: 50rpx;
}
.address-box .tip{
  width: 580rpx;
  height: 36rpx;
  line-height: 36rpx;
	border-radius: 6rpx;
  border: solid 1rpx #ff6161;
  font-size: 22rpx;
  color: #ff6161;
  padding-left: 8rpx;
  margin: 30rpx 0 50rpx;
}
.address-list {
  position: relative;
  padding: 0 30rpx;
  min-height: 94rpx;
  align-items: center;
	background-color: #f5f5f5;
  border-radius: 6rpx;
  margin-bottom: 28rpx;
}
.address-ipt {
  font-size: 28rpx;
  color: #333;
  height: 94rpx;
  line-height: 96rpx;
}
.address-list-textarea {
  display: flex;
  min-height: 100rpx;
  align-items: center;
	background-color: #f5f5f5;
  border-radius: 6rpx;
  margin-bottom: 28rpx;
}
.address-textarea {
  font-size: 28rpx;
  color: #333;
  width: 100%;
  z-index: 200;
  padding-left: 30rpx;
}
.address-phd {
  font-size: 28rpx;
  line-height: 96rpx;
  color: #ccc;
}
.invoice-box{
  padding: 0 30rpx 30rpx;
  background-color: #ffffff;
  margin-top: 30rpx;
}
.invoice-box .title-box{
  border-bottom: 1rpx solid #dadada;
}
.invoice-box .title-box .is-open{
  font-size: 30rpx;
  color: #141718;
  padding-top: 50rpx;
}
.radio-icon , .type-box{
  display: flex;
  align-items: center;
  padding: 30rpx 0;
}
.van-radio{
  margin-right: 60rpx;
}
.invoice-type{
  font-size: 30rpx;
  color: #141718;
  padding-top: 30rpx;
}
.type-box .type{
  font-size: 28rpx;
	color: #a0a0a0;
}
.type-box .tip,.take-tip{
  width: 320rpx;
  height: 36rpx;
  line-height: 36rpx;
	border-radius: 4rpx;
  border: solid 1rpx #ff6161;
  font-size: 22rpx;
  color: #ff6161;
  margin-left: 60rpx;
  padding-left: 8rpx;
}
.take-tip{
  margin-left: 0rpx;
  margin: 10rpx 0 30rpx;
}
.submit-btn{
  width: 688rpx;
	height: 75rpx;
  background-color: #141718;
  font-size: 30rpx;
  color: #fff;
  line-height: 75rpx;
  text-align: center;
  margin-top: 50rpx;
}