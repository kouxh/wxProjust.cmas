@import "/app.wxss";
.page-content-index {
    /* background-color: #f8f8f8; */
    min-height: 100vh;
    width: 100%;
}
.header {
    height: 20rpx;
    background-color: #f8f8f8;
}
.page-content-index .content {
    background-color: #fff;
    margin-bottom: 200rpx;
}
.page-content-index .content .content-title {
    padding: 38rpx 0 70rpx 30rpx;
    display: flex;
    align-items: center;
}
.page-content-index .content .content-title .title {
    font-size: 36rpx;
    font-weight: 700;
    color: #333;
    padding-left: 20rpx;
}
.page-content-index .tabs .van-tabs--card .van-tabs__wrap {
    height: 80rpx;
}
.page-content-index .tabs .van-tabs__nav--card {
    height: 80rpx;
    border-radius: 4rpx;
    border: 2rpx solid #1677ff;
}
.page-content-index .tabs .van-tabs__nav--card .van-tab {
    color: #ccc;
    border-right: 2rpx solid #1677ff;
    display: flex;
    justify-content: center;
    align-items: center;
}
.page-content-index .tabs .van-tabs__nav--card .van-tab.van-tab--active {
    color: #1677ff;
    font-size: 36rpx;
    background-color: #fff;
}
.page-content-index .content .tabs .content-box,
.page-content-index .content .tabs .comment-box{
    padding: 45rpx 32rpx 0;
}
.page-content-index .content .tabs .content-box .each-item {
    height: 470rpx;
    margin-bottom: 20rpx;
    border-bottom: 2rpx solid #eee;
}
.page-content-index .content .tabs .content-box .each-item .tit {
    font-size: 34rpx;
    color: #333;
    font-weight: bold;
}
.page-content-index .content .tabs .content-box .each-item .img {
    width: 686rpx;
    height: 300rpx;
    object-fit: cover;
    padding-top: 18rpx;
}
.page-content-index .content .tabs .content-box .each-item .foot {
    display: flex;
    justify-content: flex-end;
    align-items: center;
}
.page-content-index .content .tabs .content-box .each-item .foot .num {
    font-size: 28rpx;
    color: #717171;
    padding: 0 20rpx 0 10rpx;
}
.page-content-index .content .tabs .content-box .each-item .foot .into {
    width: 156rpx;
    height: 36rpx;
    font-size: 24rpx;
    color: #e8541e;
    line-height: 36rpx;
    text-align: center;
    background: #FCEEE9;
    border-radius: 4rpx;
    
}
.page-content-index .content .tabs .content-box .each-item:last-child{
    border-bottom: none;
}
.notice-content-load{
    display: flex;
    justify-content: center;
    align-items: center;
    height: 600rpx;
}
 .load {
    margin: 0 auto;
    padding-top: 400rpx;
  }
  .nomsg-img-box {
    /* margin: 0;
    border: 0;
    padding: 0; */
    padding-top: 300rpx;
    font-size: 100%;
    text-align: center;
    vertical-align: baseline;
  }
   .nomsg-img-box .nomsg-img {
    width: 300rpx;
    height: 200rpx;
  }
  .nomsg-img-box .tips-msg {
    text-align: center;
    margin-top: 80rpx;
    color: #b2b2b2;
    font-size: 24rpx;
  }
  .page-content-index .content .tabs .comment-box .each-item{
    padding-bottom: 20rpx;
    border-bottom: 2rpx solid #eee;
  }
  .page-content-index .content .tabs .comment-box .each-item .tit-box{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 20rpx;
  }
  .page-content-index .content .tabs .comment-box .each-item .tit-box .tit{
    font-size: 30rpx;
    color: #333;
    width: 500rpx;
    font-weight: bold;
}
.page-content-index .content .tabs .comment-box .each-item .tit-box .right{
    color: #ccc;
}
  .page-content-index .content .tabs .comment-box .each-item .info{
      display: flex;
      padding-top: 20rpx;
  }
  .page-content-index .content .tabs .comment-box .each-item .info .left{
    width: 600rpx;
    padding-left: 20rpx;
  }
  .page-content-index .content .tabs .comment-box .each-item .info .right{
    width: 86rpx;
    height: 40rpx;
    display: flex;
    justify-content: center;
    color: #fff;
    font-size: 26rpx;
    border-radius: 10rpx;
}
.not-bg{
    background: #ccc;
}
.bg{
    background: #1677ff;
}