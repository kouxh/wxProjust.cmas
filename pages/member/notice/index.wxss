@import "/app.wxss";
.pages-notice-index{
  width: 100%;
  height: 100%;
}
.notice-box{
	height: 844rpx;
	background-color: #ffffff;
  border-radius: 1rpx;
  margin-top: 30rpx;
  padding:50rpx 30rpx 0;
}
.send,.details{
  font-size: 30rpx;
	color: #141718;
}
.details{
  padding: 30rpx 0rpx 28rpx 46rpx;
}
 .limit-box{
  width: 688rpx;
	height: 463rpx;
	background-color: #f5f5f5;
	border-radius: 6rpx;
}
.each-limits {
  padding: 20rpx 30rpx 0rpx 20rpx;
  display: flex;
  align-items: center;
}
.each-limits .circle {
    width: 10rpx;
    height: 10rpx;
    border-radius: 6rpx;
    background-color: #141718;
}
.each-limits .text {
  font-size: 24rpx;
  color: #141718;
  padding-left: 20rpx;
  width: 600rpx;
}
.limit-btn{
  width: 192rpx;
	height: 60rpx;
	background-color: #558dfe;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 24rpx;
  margin-left: 20rpx;
}
.tip{
  font-size: 24rpx;
  color: #ff6161;
  padding: 32rpx 0;
}
.btn{
  width: 688rpx;
	height: 72rpx;
  background-color: #141718;
  font-size: 26rpx;
  color: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
}