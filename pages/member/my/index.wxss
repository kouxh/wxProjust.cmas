page{
  background-color: #f8f8f8;
}
.pages-member-my-index{
width: 100%;
height: 100%;
}
.pages-member-my-index .member-header {
  width: 100%;
  height: 200rpx;
  background-color: #fff;
  border-top: 2rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.pages-member-my-index .member-header .header-left {
  display: flex;
  align-items: center;
  padding-left: 24rpx;
}
.pages-member-my-index .member-header .header-left .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 1px solid #eee;
}
.pages-member-my-index .member-header .header-left .avatar image {
  width: 100%;
  height: 100%;
  border-radius: 60rpx;
  object-fit: cover;
}
.pages-member-my-index .member-header .header-left .user-info {
  padding-left: 30rpx;
}
.pages-member-my-index .member-header .header-left .user-info .nickname {
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  color: #333333;
}
.pages-member-my-index .member-header .header-left .user-info .level {
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #e32c29;
  padding-top: 18rpx;
}
.pages-member-my-index .vip-box,.question-box{
  height: 100rpx;
  background-color: #fff;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 0;
}
.pages-member-my-index .vip-box .vip-left{
  font-size: 28rpx;
  color: #333;
}
.pages-member-my-index .vip-box .vip-right{
  color: rgb(204, 204, 204);
}
.pages-member-my-index .account-box{
  height: 220rpx;
  background-color: #fff;
  padding: 0 30rpx;
  margin-bottom: 20rpx;

}
.pages-member-my-index .account-box:nth-last-child(2){
  position: relative;
}

.pages-member-my-index .account-box .account-header{
display: flex;
align-items: center;
padding-top: 24rpx;
}
.pages-member-my-index .account-box .account-header .tag ,.question-box .question-left .tag{
  width: 8rpx;
  height: 30rpx;
  background-color: #e32c29;
}
.pages-member-my-index .account-box .account-header .text,.question-box .question-left .text{
  padding-left: 20rpx;
  font-size: 28rpx;
  color: #333;
  letter-spacing: 4rpx;

}
.index-application-content-box {
  display: flex;
  flex-wrap: wrap;
}
  .index-application-content {
    flex: none;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    width: 25%;
    padding-top: 20rpx;
  }
  .application-content-text {
    font-size: 30rpx;
    letter-spacing: 4rpx;
    color: #333;
    padding-top: 16rpx;
  }
  .img{
    width: 50rpx;
    height: 50rpx;
    object-fit: cover;
  }
  .question-box .question-left {
    display: flex;
    align-items: center;
  }
  .replay-num{
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: 68rpx;
    right: 250rpx;
    background: #f3ded4;
    border-radius: 50%;
    font-size: 26rpx;
    color: #d8293c;
    line-height: 40rpx;
    text-align: center;

  }
  .notice-state{
    position: absolute;
    top: 80rpx;
    right: 90rpx;
    width: 16rpx;
    min-width: 0;
    height: 16rpx;
    background-color: #ee0a24;
    border-radius: 100%;
  }
